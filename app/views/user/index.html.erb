<p id="notice"><%= notice %></p>
<br><br>
<h5 class="header center red-text">Manutenção Usuários</h5>
<br><br>
<div class="container">
    
    <div class="row">
      <div class="col s12"></div>
      <div class="col s3"><b>Curso</b></div>
      <div class="col s4"><b>Email</b></div>
        <div class="col s2"><b>Username</b></div>
    </div>
    
   <% @users.each do |user| %>
    <div class="row">
      <div class="col s12"></div>
      <div class="col s3"><%= user.curso.nome %> </div>
      <div class="col s4"><%= user.email %> </div>
      <div class="col s2"><%= user.username %> </div>
      <div class="actions">
        <div class="col s0">  
            <%= link_to user,:confirm => "Você tem ceretza?", :method => :delete, class:'waves-effect waves-circle waves-light btn-floating secondary-content  '  do %>
               <i class="material-icons tooltipped"  data-tooltip="Deletar" >delete</i> 
            <%end%>
        </div>
       
        <div class="col s0">  
            <%= link_to edit_user_path(user),class:'waves-effect waves-circle waves-light btn-floating secondary-content' do %>
              <i class="material-icons tooltipped"  data-tooltip="Editar">edit</i>  
            <%end%>
        </div>
      </div>
    </div>
   <% end %>
</div>  
  
   
<script>
$('.tooltipped').tooltip();
</script>