<p id="notice"><%= notice %></p>
<br><br>
<h5 class="header center red-text"> Manutenção Semestres</h5>


<div class="container">
<table class="striped">
  <thead>
    <tr>
      <th>Ano</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @semestres.each do |semestre| %>
      <tr>
        <td><%= semestre.ano %></td>
        <td><%= semestre.codigo %></td>
        <td><%= link_to 'Editar', edit_semestre_path(semestre) %></td>
        <td><%= link_to 'Excluir', semestre, method: :delete, data: { confirm: 'Você tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a class="btn waves-effect waves-light light-blue darken-3" <%= link_to 'Adicionar', new_semestre_path %></a>
   
</div>
