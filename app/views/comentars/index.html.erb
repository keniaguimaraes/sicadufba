
<p id="notice"><%= notice %></p>
<br><br>
<h5 class="header center red-text">Meus Comentários</h5>
<br><br>
<div class="container">
    
    <div class="row">
      <div class="col s12"></div>
      <div class="col s3"><b>Disciplina</b></div>
      <div class="col s4"><b>Professor</b></div>
        <div class="col s2"><b>Semestre</b></div>
    </div>
    
     <% @comentars.each do |comentar| %>
    <div class="row">
      <div class="col s12"></div>
      <div class="col s3"><%= comentar.disciplinacurso.disciplina.nome %> </div>
      <div class="col s4"><%= comentar.professor.nome %> </div>
      <div class="col s2"><%= comentar.semestre.ano %> </div>
      <div class="actions">
        <div class="col s0">  
            <%= link_to comentar, :confirm => "Você tem ceretza?",method: :delete, class:'waves-effect waves-circle waves-light btn-floating secondary-content'  do %>
               <i class="material-icons tooltipped"  data-tooltip="Deletar" >delete</i> 
            <%end%>
        </div>
        <div class="col s0">  
            <%= link_to edit_comentar_path(comentar),class:'waves-effect waves-circle waves-light btn-floating secondary-content'  do %>
               <i class="material-icons tooltipped"  data-tooltip="Editar">edit</i>  
            <%end%>
        </div>
      </div>
    </div>
   <% end %>
</div>  
  
   
<script>
$('.tooltipped').tooltip();
</script>
   