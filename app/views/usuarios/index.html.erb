
<br>
<div class="container">

   <% @usuarios.each do |user| %>
    <% if user.bloqueio == true then 
        status = "Usuário Bloqueado"
      else
        status = "Usuário Habilitado"
      end  
    %>
    <div class= "card  s12 m12 lg12">
      <div class="row  s12 m12 lg12">
        <br>
        <div class="col s12 m12 lg12 "><b>Curso: </b><%= user.curso.nome.split('-').first %> </div>
      </div>
      
      <div class="row">
        <div id="div2" class="col s12 m12 lg12"><b>Usuário:</b><%= user.username %> </div>
        <div class="col s12 m12 lg12"><b>Status: </b><%= status %> </div>
       
           <div class="col s7 offset-s7 m2 offset-m10 lg2 offset-lg6">
                <div>  
                     <%= link_to edit_usuario_path(user),class:'' do %>
                      <i class="material-icons blue-text text-lighten-2 tooltipped"  data-tooltip="Editar">edit</i>  
                    <%end%>
                    <%= link_to bloquear_usuario_path(user),class:'' do %>
                     <i class="material-icons blue-text text-lighten-2 tooltipped"  data-tooltip="Bloquear">block</i>  
                    <%end%>
                    <%= link_to desbloquear_usuario_path(user),class:'' do %>
                     <i class="material-icons blue-text text-lighten-2 tooltipped"  data-tooltip="Desbloquear">check</i>  
                    <%end%>
                    <!--
                     <%= link_to user,:confirm => "Você tem ceretza?", :method => :delete, class:' '  do %>
                       <i class="material-icons blue-text text-lighten-2 tooltipped"  data-tooltip="Deletar" >delete</i> 
                    <%end%>-->
           </div>
           <br>
        </div>
      </div>
      
   </div>
   
      <div class="row">
          <div class="col s12 m6 lg6 offset-m3 offset-m4">
             <%= will_paginate @users %>
          </div>
      </div> 
   <% end %>
</div>  
  
   
<script>
$('.tooltipped').tooltip();
</script>
<style type="text/css">
  #div2 {
       word-wrap: break-word;}
</style>