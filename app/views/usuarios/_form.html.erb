<%= form_for(usuario) do |f| %>
 <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>
      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
 <% end %>
  
  <div class="row">
    <div class="col s12 m8 lg8 offset-m2">
       <div class="card-panel ">
           <div class="row">
              <div class="col s12 m12 lg12"><b><%= f.label :username, "Username" %></b></div> 
              <div class="col s12 m12 lg12"><%= f.text_field :username, id: :username,:readonly=>true %></div>
           </div> 
           
         <div class="row">
             <div class="col s12 m6 lg6"><b><%= f.label :curso_id, "Curso" %></b></div>
             <div class="col s12 m12 lg12"> <%=collection_select(:usuarios, :curso_id, @curso, :id, :nome, {:prompt => '' }, { class: 'js-searchable' })%></div>
          </div>
          

         
           <div class="row">         
              <div class="col s12 m1 l1"><b><%= f.label :administrador, "Administrador?" %></b></div> 
              <div class="col s12 m1 lg1 offset-m2 offset-m2"><label> <%= f.check_box(:administrador, {}, true, false)%> <span> </span> </label> </div>
           </div>  
           
           <div class="row">         
               <divclass="col s12 m12 lg12"> 
                 <%= f.submit "OK", class: 'btn waves-effect waves-light light-blue btn-small white-text' %> 
              </div>  
           </div>  
           
       </div>
     </div>
   </div>

         
<% end %>
<script>
      $(".js-searchable").select2({
         placeholder: 'Informe o Curso',
         allowClear: true,
         width:'100%',
         tags: "true"
     });
</script>     