
<br>
<section class="section">
  <div class="row">
    <div class="col m6 offset-m3 s12">
      <div class="card-panel">
        <div class="row">
          <div class="col s12">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="input-field col s12">
                <!-- <i class="material-icons prefix">email</i> -->
                <!-- <i class="mdi-communication-email prefix"></i> -->
                <%= f.email_field :email, autofocus: true %>
                <%= f.label :email %>
              </div>

              <div class="input-field col s12">
                <%= f.text_field :username, autofocus: true %>
                <%= f.label :username %>
              </div>

              <div class="input-field col s12">
                <%= f.password_field :password, autocomplete: "off" %>
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>

              <div class="input-field col s12">
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
                <%= f.label :password_confirmation %>
              </div>
              
               <div class="input-field col s12">
                <%= f.label :curso_id %>
               <%=collection_select(:user, :curso_id, Curso.where('codigo in ("186140","196120","195140","112140")').all.order(:nome), :id, :nome, { }, { class: 'js-searchable' })%>
              </div> 
              
              <div class="input-field col s12">
                <%= f.submit "Cadastrar", class: "waves-effect waves-light btn" %>
              </div>

              <div class="input-field col s12">
                <%= render "devise/shared/links" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



<script>

     $(".js-searchable").select2({
         placeholder: "Escolha um Curso",
         allowClear: true,
         width:"100%"
     
     });
 
</script>