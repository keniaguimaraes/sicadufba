<% if not user_signed_in? %>
<br><br>
<% end %>
<div class="container">
  <div class="row">
     <div class="card-panel">
       <h6 class="card-title blue-text"><b>Contato</b></h6>
        <div class="row">
            <%= form_tag(send_contact_path, method: "post") do %>
              <div class="input-field col s12 m12 lg12">
                 <i class="material-icons prefix">account_circle</i>
                 <input  id="icon_prefix" name="name"type="text" class="validate">
                  <label for="icon_prefix">Nome</label>
              </div>
        
              <div class="input-field col s12 m12 lg12">
                 <i class="material-icons prefix">message</i>
                 <input id="icon_prefix2" name="email"type="email" class="validate">
                 <label for="icon_prefix2">E-mail</label>
              </div>
           
              <div class="col s12 m12 lg12">
                <div class="input-field s12 m12 lg12">
                <i class="material-icons prefix">mode_edit</i>
                <textarea id="icon_prefix3"  name="message" class="materialize-textarea"></textarea>
                <label for="icon_prefix3">Mensagem</label>
               </div>
              </div>
              <div class="col s12 m12 lg12"><br>
                <input type="submit" value="Enviar" class="btn waves-effect waves-light light-blue btn-small white-text">
              </div>
            <% end %>
        </div>
      </div>
    </div>  
</div>


